{
    "name": "rehankanak/guardian",
    "description": "Laravel package for verifying desktop sign-in via a mobile app",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "laravel",
        "authentication",
        "security",
        "2fa",
        "two-factor-authentication"
    ],
    "homepage": "https://github.com/zusamarehan/guardian",
    "support": {
        "issues": "https://github.com/zusamarehan/guardian/issues",
        "source": "https://github.com/zusamarehan/guardian"
    },
    "autoload": {
        "psr-4": {
            "RehanKanak\\Guardian\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RehanKanak\\Guardian\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Rehan Kanak",
            "email": "zrehan286@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1 || ^8.2 || ^8.3",
        "illuminate/support": "^10.0 || ^11.0 || ^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.13",
        "pestphp/pest": "^2.33",
        "orchestra/testbench": "^8.0 || ^9.0",
        "phpstan/phpstan": "^1.11"
    },
    "extra": {
        "laravel": {
            "providers": [
                "RehanKanak\\Guardian\\GuardianServiceProvider"
            ]
        }
    },
    "scripts": {
        "format": "vendor/bin/pint",
        "test": "vendor/bin/pest",
        "lint": [
            "@php vendor/bin/pint",
            "@php vendor/bin/phpstan analyse"
        ],
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
